<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="200dp">

    <ImageView
        android:id="@+id/ivHinh"
        android:layout_width="180dp"
        android:layout_height="120dp"

        android:src="@drawable/trasua_frm_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="90000"
        android:textColor="#4CAF50"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHinh" />

    <TextView
        android:fontFamily="sans-serif-black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" VND"
        android:textColor="#4CAF50"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/txtGia"
        app:layout_constraintTop_toBottomOf="@+id/ivHinh" />

    <TextView
        android:id="@+id/txtTenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCSD SDD"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#F000"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGia" />

    <Button
        android:id="@+id/btnAddCart"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:background="@drawable/custom_button_add_cart"
        android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
        android:text="Thêm vào giỏ"
        android:textAllCaps="false"
        android:textColor="#F000"

        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenSP" />
</androidx.constraintlayout.widget.ConstraintLayout>