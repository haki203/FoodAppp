<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F9"
    tools:context=".EnterVerifyOtpActivity">


    <Button
        android:id="@+id/icon_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"></Button>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Verify Number"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:fontFamily="sans-serif-black"
        android:text="Verify your Number"
        android:textColor="#F000"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edtNumber6"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_radius"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:hint="*"

        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNumber5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edtNumber3"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_radius"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:hint="*"
        android:maxLength="1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNumber2"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edtNumber5"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_radius"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:hint="*"

        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNumber4"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edtNumber4"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_radius"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:hint="*"
        android:maxLength="1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNumber3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nhập mã OTP vừa được gửi đến bạn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/edtNumber1"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_radius"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:hint="*"
        android:maxLength="1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edtNumber2"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_radius"
        android:drawablePadding="18dp"
        android:gravity="center"
        android:hint="*"
        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNumber1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_send_otp_code"
        android:layout_width="347dp"
        android:layout_height="52dp"
        android:background="@drawable/custom_button_login"
        android:text="Send OTP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumber4"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Không nhận được mã?"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_send_otp_code" />

    <TextView
        android:id="@+id/tv_send_otp_again_verifyOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="sans-serif-black"
        android:text="Gửi lại OTP"
        android:textColor="#F000"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/not" />

    <EditText
        android:id="@+id/edt_otp_verifyOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập otp ở đây, còn ở trên thì chịu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.734"
        tools:layout_editor_absoluteX="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>