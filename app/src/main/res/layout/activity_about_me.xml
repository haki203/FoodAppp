<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity.AboutMe"
    android:padding="10dp">
<!--hehe-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="90dp">

        <ImageView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_sangtrai_aboutme" />
        <TextView
            android:paddingLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="28dp"
            android:textStyle="bold"
            android:text="Abou Me      "/>
        <ImageView
            android:paddingLeft="90dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list_aboutme"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textColor="#322F2F"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_person_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Nguyễn Văn A"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"

        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_phone_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="+84 942144444"
        android:inputType="number"
        android:paddingLeft="15dp"

        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_email_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="nguenvana123@gmail.com"
        android:inputType="textEmailAddress"

        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Đổi mật khẩu"
        android:textColor="#322F2F"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/et_matKhauHienTai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Mật khẩu hiện tại"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauMoi"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/et_matKhauMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauHienTai"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>