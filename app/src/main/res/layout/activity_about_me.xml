<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AboutMeActivity"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">
<!--hehe-->

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        tools:layout_editor_absoluteX="10dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_sangtrai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="90dp"
            android:text="About Me      "
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textColor="#322F2F"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Nguyễn Văn A"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"

        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edtSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="+84 942144444"
        android:inputType="number"
        android:paddingLeft="15dp"

        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edtGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_email_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:layout_marginTop="8dp"

        android:hint="nguenvana123@gmail.com"
        android:inputType="textEmailAddress"

        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/edtDiaChi"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="8dp"
        android:drawableTint="#868889"
        android:hint="Dia chi"
        android:inputType="textEmailAddress"

        android:paddingLeft="15dp"
        android:textColorHint="#868889"

        app:layout_constraintTop_toBottomOf="@+id/edtSDT"
        tools:layout_editor_absoluteX="10dp" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Đổi mật khẩu"
        android:textColor="#322F2F"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edtGmail"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/et_matKhauHienTai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Mật khẩu hiện tại"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edtCFPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauMoi"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/show_pass_btn"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha=".5"
        android:onClick="ShowHide"
        android:padding="10dp"
        android:src="@drawable/ic_eye"
        app:layout_constraintBottom_toBottomOf="@+id/et_matKhauHienTai"
        app:layout_constraintEnd_toEndOf="@+id/et_matKhauHienTai"
        app:layout_constraintTop_toTopOf="@+id/et_matKhauHienTai" />

    <ImageView
        android:id="@+id/show_pass_btn1"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha=".5"
        android:onClick="ShowHide1"
        android:padding="10dp"
        android:src="@drawable/ic_eye"
        app:layout_constraintBottom_toBottomOf="@+id/edtCFPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtCFPassword"
        app:layout_constraintTop_toTopOf="@+id/edtCFPassword" />

    <ImageView
        android:id="@+id/show_pass_btn2"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha=".5"
        android:onClick="ShowHide2"
        android:padding="10dp"
        android:src="@drawable/ic_eye"
        app:layout_constraintBottom_toBottomOf="@+id/et_matKhauMoi"
        app:layout_constraintEnd_toEndOf="@+id/et_matKhauMoi"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauHienTai" />
    <EditText
        android:id="@+id/et_matKhauMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauHienTai"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Lưu cài đặt"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:onClick="onClickSave"
        android:background="@drawable/custom_button_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>