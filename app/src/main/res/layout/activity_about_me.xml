<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMe"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">
<!--hehe-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        tools:layout_editor_absoluteX="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_sangtrai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="90dp"
            android:text="Abou Me      "
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textColor="#322F2F"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="130dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_person_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Nguyễn Văn A"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"

        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_phone_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="+84 942144444"
        android:inputType="number"
        android:paddingLeft="15dp"

        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_email_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="nguenvana123@gmail.com"
        android:inputType="textEmailAddress"

        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Đổi mật khẩu"
        android:textColor="#322F2F"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/et_matKhauHienTai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Mật khẩu hiện tại"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauMoi"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/et_matKhauMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_password_aboutme"
        android:drawablePadding="10dp"
        android:drawableTint="#868889"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#868889"
        app:layout_constraintTop_toBottomOf="@+id/et_matKhauHienTai"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Lưu cài đặt"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textAllCaps="false"

        android:background="@drawable/custom_button_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>