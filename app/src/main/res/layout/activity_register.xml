                        android:id="@+id/btnDN"
                        android:layout_width="376dp"
                        android:layout_height="53dp"
                        android:background="@drawable/custom_button_login"
                        android:onClick="onRegister"
                        android:text="Đăng ký"
                        android:textAllCaps="false"
                        android:textSize="18dp" />

