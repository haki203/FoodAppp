<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.ProductActivity"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/img_lemon"
                    ></ImageView>

                <Button
                    android:id="@+id/icon_left"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_left"></Button>

            </FrameLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2.22"
                    android:textColor="@color/primary"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    ></TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_heart"
                    ></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp"
                    ></TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_star"
                    ></ImageView>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_star"
                    ></ImageView>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_star"
                    ></ImageView>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_star"
                    ></ImageView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_star_emty"
                    ></ImageView>


            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic Lemons"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic Mountain works as a seller for many organic growers of organic lemons. Organic lemons are easy to spot in your produce aisle. They are just like regular lemons, but they will usually have a few more scars on the outside of the lemon skin. Organic lemons are considered to be the world's finest lemon for juicing"
                android:textColor="@color/skip"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:background="@drawable/bg_white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        ></TextView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_white"
                        android:textColor="@color/primary"
                        android:textSize="24sp"
                        android:text="-"></androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_white"
                        android:text="3"
                        android:textSize="20sp"
                        android:textColor="@color/black"></androidx.appcompat.widget.AppCompatButton>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_white"
                        android:text="+"
                        android:textSize="24sp"
                        android:textColor="@color/primary"></androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_primary"
                    android:text="Thêm vào giỏ hàng"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</FrameLayout>