<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_3"></androidx.viewpager2.widget.ViewPager2>


    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/skip"
        android:text="Skip"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_gravity="left|bottom"></TextView>

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circle3"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center|bottom"
        app:ci_drawable="@drawable/bg_indicator_3"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:text="Next"
        android:onClick="Next"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_gravity="right|bottom"
        ></TextView>

    <Button
        android:id="@+id/btn_start_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bắt Đầu Nào!"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:paddingVertical="14dp"
        android:visibility="gone"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_btn_primary"
        ></Button>



</FrameLayout>